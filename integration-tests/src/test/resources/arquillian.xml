<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://jboss.org/schema/arquillian" xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <defaultProtocol type="Servlet 3.0" />

    <engine>
        <!-- property name="deploymentExportPath">target/</property-->
    </engine>

    <container qualifier="jboss-as-7" default="true">
        <configuration>
            <property name="serverConfig">standalone.xml</property>
            <property name="javaVmArguments">-Xrunjdwp:transport=dt_socket,address=8787,server=y,suspend=n</property>
            <property name="outputToConsole">false</property>
            <property name="javaHome">/opt/java/jdk1.7.0_09</property>
        </configuration>
        <protocol type="Servlet 3.0">
            <property name="host">127.0.0.1</property>
            <property name="port">8080</property>
        </protocol>
    </container>

</arquillian>
